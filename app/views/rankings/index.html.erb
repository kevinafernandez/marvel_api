<div class="page-header">
  <h3><%= fa_icon 'trophy' %> Ranking <small>Listado de los mejores</small></h3>
</div>
<div class="panel panel-default">
  <div class="panel-body">
    <div col-md-6 class="margen" align="center">
       <%= link_to reset_ranking_ranking_path(@rankings), method: :get, data: {confirm: "¿Está seguro que desea reiniciar el ranking? de lo contrario será reiniciado a las 00:00"}, class: 'btn btn-success btn-xs' do %> 
            <%= fa_icon 'repeat', text:'Reiniciar ranking' %>
        <% end %>
      </div>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr class="pretty" align="center">
            <th> Nombre <%= fa_icon 'user-circle-o' %></th>
            <th> Triunfos en batalla <%= fa_icon 'trophy' %></th>
          </tr>
        </thead>
        <tbody> 
          <% @personas.each do |persona| %>
            <tr> 
              <td align="center"><%= persona.nombre %></td>
              <td align="center"><%= persona.peleas_ganadas_dia %></td>        
           </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

