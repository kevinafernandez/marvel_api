<div class="page-header clearfix">
  <h3><%= fa_icon 'user-circle-o' %> Detalles de persona</h3>
</div>
<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h4 class="pull-left">Nombre: <%= @persona.nombre %></h4>
  </div>
  <div class="tabs">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active">
        <a href="#cabecera" aria-controls="cabecera" role="tab" data-toggle="tab">Datos</a>
      </li>
    </ul>
  </div>
  <div class="panel-body">
    <div class="tab-content">
      <!-- Cabecera -->
      <div role="tabpanel" class="tab-pane active" id="cabecera">
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <tbody>
              <tr>
                <td class="active col-title"><%= fa_icon 'info-circle'%> Nombre de persona</td>
                <td class="col-content"><%=@persona.nombre%></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-footer">
    <%= link_to personas_path, class: 'btn btn-success' do %>
      <%= fa_icon 'list', text: 'Listar personas' %>
    <% end %>
    <%= link_to edit_persona_path(@persona), class: 'btn btn-warning' do %>
      <%= fa_icon 'pencil', text: 'Editar' %>
    <% end %>
  </div>
</div>
