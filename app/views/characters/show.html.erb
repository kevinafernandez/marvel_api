<div class="page-header clearfix">
  <h3><%= fa_icon 'user-circle-o' %> Superheroe <small>Detalle</small> </h3>
</div>
<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h4 class="pull-left"><%= @character.name %></h4>
  </div>
  <div class="tabs">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active">
        <a href="#cabecera" aria-controls="cabecera" role="tab" data-toggle="tab">Datos</a>
      </li>
    </ul>
  </div>
  <div class="panel-body">
    <div class="tab-content">
      <!-- Cabecera -->
      <div role="tabpanel" class="tab-pane active" id="cabecera">
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <tbody>
            	<tr>
                <td class="active col-title"><%= fa_icon 'file-image-o'%> Imagen</td>
                <td class="col-content"><%= image_tag @character.thumbnail + '.jpg', width: 120, height: 120 %></td>
              </tr>
              <tr>
                <td class="active col-title"><%= fa_icon 'ioxhost'%> Nombre</td>
                <td class="col-content"><%=@character.name%></td>
              </tr>
              <tr>
                <td class="active col-title"><%= fa_icon 'info-circle'%> Descripción</td>
                <% if @character.description.present?%>
                	<td class="col-content"><%=@character.description%></td>
                <%else %>
                	<td class="col-content"><i>Este superheroe no cuenta con descripción</i></td>
                <%end %>   
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

